<resources>
	<declare-styleable name="Themes">
        <attr name="waveViewStyle" format="reference"/>
    </declare-styleable>
    <declare-styleable name="DeviceCardView">
        <attr name="extra_title" format="string|reference"/>
    </declare-styleable>

    <style name="DotPreferenceFullCard">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/SwitchPreference_pref_full</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="DotPreferenceTopCard">
        <item name="android:layout_marginBottom">-1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/SwitchPreference_pref_full</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="DotPreferenceMiddleCard">
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:layout_marginBottom">-1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/SwitchPreference_pref_full</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="DotPreferenceBottomCard">
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/SwitchPreference_pref_full</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="ToolbarText.Collapsed" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title"/>

    <style name="ToolbarText.Expanded" parent="ToolbarText.Collapsed">
        <item name="android:textSize">34sp</item>
    </style>
</resources>  
