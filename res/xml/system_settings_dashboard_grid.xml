<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    android:title=" "
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"    
    xmlns:app="http://schemas.android.com/apk/res-auto">
 

    <PreferenceCategory
        android:title="System Navigation"
        android:key="ui_category"
        settings:layout="@layout/afterlab_preference_category">
        <Preference
            android:key="gesture_system_navigation_input_summary"
            android:title="@string/system_navigation_title"
            android:icon="@drawable/ic_advanced_settings"
            android:summary="@string/system_navigation_title_extra_summary"
            android:fragment="com.android.settings.gestures.SystemNavigationGestureSettings"
            settings:controller="com.android.settings.gestures.SystemNavigationPreferenceController"
            settings:keywords="@string/keywords_system_navigation" 
            settings:layout="@layout/afterlab_card_interface_grid" />

        <Preference
            android:key="gesture_settings"
            android:title="@string/gesture_preference_title"
            android:icon="@drawable/ic_settings_gestures" 
            android:fragment="com.android.settings.gestures.GestureSettings"
            settings:controller="com.android.settings.gestures.GesturesSettingPreferenceController"
            settings:layout="@layout/afterlab_card_interface_grid_right" />
        <Preference
            android:key="button_settings"
            android:title="@string/button_pref_title"
            android:icon="@drawable/ic_button_settings"
            android:fragment="com.android.settings.custom.buttons.ButtonSettings"
            settings:layout="@layout/afterlab_card_interface_grid" />
        <Preference
            android:key="accessibilitycard_settings"
            android:title="@string/accessibility_settings"
            android:summary="@string/accessibility_settings_summary"            
            android:icon="@drawable/ic_settings_accessibility"
            android:fragment="com.android.settings.accessibility.AccessibilitySettings"
            settings:layout="@layout/afterlab_card_interface_grid_right" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Core Device Features"
        android:key="system_category"
        settings:layout="@layout/afterlab_preference_category">
        <Preference
            android:fragment="com.android.settings.deviceinfo.aboutphone.MyDeviceInfoFragment"
            android:icon="@drawable/ic_settings_about_device"
            android:key="top_level_about_device"
            android:title="@string/about_settings"
            settings:controller="com.android.settings.deviceinfo.aboutphone.TopLevelAboutDevicePreferenceController"
            settings:layout="@layout/afterlab_card_interface_grid" />
        <Preference
            android:key="athena_info"
            settings:layout="@layout/afterlab_card_interface_grid_right"
            android:icon="@drawable/ic_advanced_settings"
            android:summary="@string/athena_title_summary"
            android:title="@string/dev_info_extra">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetClass="dev.sebaubuntu.athena.MainActivity"
            android:targetPackage="dev.sebaubuntu.athena.dev" />
        </Preference>
        <Preference
            android:key="reset_dashboard"
            android:title="@string/reset_dashboard_title"
            android:summary="@string/reset_dashboard_title_summary"
            android:icon="@drawable/ic_restore"
            android:fragment="com.android.settings.system.ResetDashboardFragment"
            settings:controller="com.android.settings.system.ResetPreferenceController"
            settings:layout="@layout/afterlab_card_interface_grid" />
       <Preference
            android:key="AboutUsSystem_title_category"
            android:title="@string/AboutUsSystem_title"
            android:summary="@string/AboutUsSystem_title_summary"
            android:fragment="com.OrchidOs.fragments.AboutUs"
            android:icon="@drawable/ic_anatolia_navbar" 
            settings:layout="@layout/afterlab_card_interface_grid_right" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Device Locale settings"
        android:key="general_category"
        settings:layout="@layout/afterlab_preference_category">
        <Preference
            android:key="date_time_settings"
            android:title="@string/date_and_time"
            android:icon="@drawable/ic_settings_date_time"
            android:fragment="com.android.settings.datetime.DateTimeSettings"
            settings:controller="com.android.settings.datetime.DateTimePreferenceController"
            settings:layout="@layout/afterlab_card_interface_grid_right" />
        <Preference
            android:icon="@drawable/ic_settings_language"
            android:title="@string/language_settings"
            android:key="language_input_settings"
            android:fragment="com.android.settings.language.LanguageAndInputSettings"
            settings:layout="@layout/afterlab_card_interface_grid" />
    </PreferenceCategory>
</PreferenceScreen>