<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title=" " >
        
    <com.android.settingslib.widget.LayoutPreference
        android:layout="@layout/user_info_frag"
        android:key="user_header"
	android:selectable="false"
        android:order="10" />


    <com.android.settingslib.widget.TopIntroPreference
            android:key="userinfo_bubbles_desc"
            android:order="20"
            android:title="@string/userinfo_bubble_setting_description"/>

    <Preference
            android:key="multiuser"
            android:order="30"
         android:icon="@drawable/ic_translate_24dp"           
            android:title="@string/multiuser_settings_title"
            settings:layout="@layout/xd_pref_card_top"           
            android:fragment="com.android.settings.users.UserSettings"/>
    
    <Preference
            android:key="accounts"
            android:order="40"
        android:icon="@drawable/ic_translate_24dp"
            settings:layout="@layout/xd_pref_card_mid"           
            android:title="@string/accounts_settings_title"
            android:fragment="com.android.settings.accounts.AccountDashboardFragment"/>

    <Preference
            android:key="emergency"
            android:order="50"
            android:icon="@drawable/ic_translate_24dp"
            settings:layout="@layout/xd_pref_card_bot"           
            android:title="@string/emergency_settings_title"
            android:fragment="com.android.settings.emergency.EmergencyDashboardFragment"/>
        
</PreferenceScreen>
