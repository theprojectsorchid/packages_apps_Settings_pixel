<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title=" ">

<SwitchPreference
            android:key="smart_5g"
            android:title="@string/smart_5g_title"
            android:persistent="false"
            android:summary="@string/smart_5g_summary"
            settings:controller="com.android.settings.network.telephony.Smart5gPreferenceController"/>
        <!-- Device deep sleep time -->
        <Preference
            android:key="sleep_time"
            android:order="49"
            android:title="@string/status_sleep_time3"
            android:summary="@string/summary_placeholder"
            android:selectable="false"/>

    <com.android.settingslib.widget.LayoutPreference
        android:key="my_device_info_header"
        android:order="-500"
        android:layout="@layout/device_info_header"
        android:selectable="false"
        settings:controller="com.android.settings.deviceinfo.DeviceNamePreferenceController"
        settings:isPreferenceVisible="true"/>
        <Preference
            android:key="hidden_apps"
            android:title="@string/hidden_apps_title"
            android:summary="@string/hidden_apps_summary"
            android:persistent="false"
            android:fragment="com.android.settings.display.HiddenAppSettingsFragment" />
</PreferenceScreen>
