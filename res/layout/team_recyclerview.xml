                    android:id="@+id/title_dev"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/leads"
                    android:textAllCaps="true"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="10.0dip"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingTop="8.0dip"
                    android:paddingBottom="8.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="10.0dip"
                        android:layout_height="10.0dip"
                        android:src="@drawable/kotak"
                        android:tint="@android:color/system_accent1_300"/>
                    <ImageView
                        android:layout_width="10.0dip"
                        android:layout_height="10.0dip"
                        android:src="@drawable/segitiga"
                        android:tint="@android:color/system_accent3_100"
                        android:layout_marginHorizontal="8.0dip"/>
                    <ImageView
                        android:layout_width="10.0dip"
                        android:layout_height="10.0dip"
                        android:src="@drawable/bulat"
                        android:tint="@android:color/system_accent2_100"/>
                </LinearLayout>
                <TextView
                    android:textAppearance="@style/CollapsingToolbarTitle.Expanded"
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_accent1"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/designers"
                    android:textAllCaps="true"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="10.0dip"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingTop="8.0dip"
                    android:paddingBottom="8.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="10.0dip"
                        android:layout_height="10.0dip"
                        android:src="@drawable/kotak"
                        android:tint="@android:color/system_accent1_300"/>
                    <ImageView
                        android:layout_width="10.0dip"
                        android:layout_height="10.0dip"
                        android:src="@drawable/segitiga"
                        android:tint="@android:color/system_accent3_100"
                        android:layout_marginHorizontal="8.0dip"/>
                    <ImageView
                        android:layout_width="10.0dip"
                        android:layout_height="10.0dip"
                        android:src="@drawable/bulat"
                        android:tint="@android:color/system_accent2_100"/>
                </LinearLayout>
                <TextView
                    android:textAppearance="@style/CollapsingToolbarTitle.Expanded"
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_accent1"
