<androidx.cardview.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-28.0dip"
    app:cardBackgroundColor="?android:colorBackground"
    app:cardCornerRadius="28.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:padding="15.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/about"/>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingTop="8.0dip"
                    android:paddingBottom="8.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="10.0dip"
                        android:layout_height="10.0dip"
                        android:src="@drawable/kotak"
                        android:tint="@android:color/system_accent1_300"/>
                    <ImageView
                        android:layout_width="10.0dip"
                        android:layout_height="10.0dip"
                        android:src="@drawable/segitiga"
                        android:tint="@android:color/system_accent3_100"
                        android:layout_marginHorizontal="8.0dip"/>
                    <ImageView
                        android:layout_width="10.0dip"
                        android:layout_height="10.0dip"
                        android:src="@drawable/bulat"
                        android:tint="@android:color/system_accent2_100"/>
                </LinearLayout>
                <TextView
                    android:textAppearance="@style/CollapsingToolbarTitle.Expanded"
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_accent1"
                    android:gravity="center_vertical"
