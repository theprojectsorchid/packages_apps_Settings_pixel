<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
     android:background="@android:color/transparent"
     android:clipToPadding="false"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="10.0dip"
     android:layout_marginBottom="10.0dip"
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto">
     
    <com.google.android.material.card.MaterialCardView
          android:gravity="center_vertical"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:paddingStart="4.0dip"
          android:paddingEnd="4.0dip"
          app:cardBackgroundColor="@color/bg_card"
          app:cardCornerRadius="26.0dip">
          
        <FrameLayout
             android:layout_gravity="center|top"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5.0dip"
             android:layout_marginBottom="5.0dip"
             android:layout_marginHorizontal="16.0dip">
             
            <LinearLayout
                 android:layout_gravity="end|center"
                 android:orientation="horizontal"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintEnd_toEndOf="parent">
                 
                <ImageView
                    android:padding="2.0dip"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:src="@drawable/ic_rounded"
                    android:tint="@android:color/system_accent1_200" />
                    
                <ImageView
                    android:padding="2.0dip"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:src="@drawable/ic_rounded"
                    android:tint="@android:color/system_accent3_200" />
                    
                <ImageView
                    android:padding="2.0dip"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:src="@drawable/ic_rounded"
                    android:tint="@android:color/system_accent2_300" />
                    
            </LinearLayout>
            
        </FrameLayout>
        
        <com.google.android.material.card.MaterialCardView
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="30.0dip"
               android:layout_marginBottom="5.0dip"
               android:layout_marginHorizontal="6.0dip"
               app:cardBackgroundColor="@android:color/system_neutral2_900"
               app:cardCornerRadius="26.0dip"
               app:cardElevation="0.0dip">
               
            <FrameLayout
                android:id="@+id/container"
                android:clipToPadding="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                
                <LinearLayout
                     android:gravity="center"
                     android:layout_gravity="end|center|top"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="-120.0dip">
                     
                    <ImageView
                         android:gravity="center"
                         android:layout_gravity="center"
                         android:layout_width="wrap_content"
                         android:layout_height="300.0dip"
                         android:src="@drawable/afterlife_logo"
                         android:tint="@android:color/system_accent2_10"
                         android:alpha="0.2" />
                         
                </LinearLayout>
                
                <LinearLayout
                     android:orientation="vertical"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:paddingHorizontal="16.0dip"
                     android:paddingVertical="16.0dip">
                     
           <com.afterlife.afterlab.fragments.team.RainbowTextView
                    android:textSize="30.0dip"
                    android:textStyle="normal"
                    android:textColor="@android:color/system_accent1_400"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="@string/abouttitl"
                    android:singleLine="true"
                    android:fontFamily="@font/Dark_Adam" />
                    
                    <TextView
                         android:textSize="12.0dip"
                         android:textColor="@android:color/system_accent1_10"
                         android:layout_gravity="center_horizontal"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginBottom="10.0dip"
                         android:text="@string/aboutsumm"
                         android:textAlignment="center" />
                         
                    <TextView
                         android:textSize="12.0dip"
                         android:textColor="@android:color/system_accent2_800"
                         android:gravity="center"
                         android:layout_gravity="end|center"
                         android:id="@+id/text_more"
                         android:background="@drawable/icon_bg"
                         android:padding="5.0dip"
                         android:layout_width="100.0dip"
                         android:layout_height="wrap_content"
                         android:layout_marginBottom="5.0dip"
                         android:text="@string/more"
                         android:backgroundTint="@android:color/system_accent3_100" />
                         
                    <LinearLayout
                         android:gravity="center"
                         android:layout_gravity="center_horizontal"
                         android:orientation="horizontal"
                         android:id="@+id/supportLayout"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="0.0dip"
                         android:layout_marginHorizontal="5.0dip">
                         
                    <LinearLayout
                         android:gravity="center"
                         android:layout_gravity="center_horizontal"
                         android:orientation="horizontal"
                         android:id="@+id/al_github"
                         android:background="@drawable/icon_bg"
                         android:padding="8.0dip"
                         android:visibility="gone"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:layout_weight="1.0"
                         android:layout_marginEnd="5.0dip"
                         android:backgroundTint="@color/bg_card">
                         
                         <ImageView
                              android:layout_width="30.0dip"
                              android:layout_height="30.0dip"
                              android:src="@drawable/github"
                              android:tint="@color/text_accent1" />
                              
                         <TextView
                              android:textSize="12.0dip"
                              android:textColor="@color/text_accent1"
                              android:layout_gravity="start|center"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Github"
                              android:textAlignment="viewStart"
                              android:layout_marginStart="5.0dip" />
                              
                        </LinearLayout>
                        
                        <LinearLayout
                              android:gravity="center"
                              android:layout_gravity="center_horizontal"
                              android:orientation="horizontal"
                              android:id="@+id/al_telegram"
                              android:background="@drawable/icon_bg"
                              android:padding="8.0dip"
                              android:visibility="gone"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1.0"
                              android:layout_marginStart="5.0dip"
                              android:backgroundTint="@color/bg_card">
                              
                        <ImageView
                              android:layout_width="30.0dip"
                              android:layout_height="30.0dip"
                              android:src="@drawable/telegram"
                              android:tint="@color/text_accent1" />
                              
                        <TextView
                              android:textSize="12.0dip"
                              android:textColor="@color/text_accent1"
                              android:layout_gravity="start|center"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Telegram"
                              android:textAlignment="viewStart"
                              android:layout_marginStart="5.0dip" />
                              
                        </LinearLayout>
                        
                    </LinearLayout>
                    
                </LinearLayout>
                
            </FrameLayout>
            
        </com.google.android.material.card.MaterialCardView>
        
    </com.google.android.material.card.MaterialCardView>
    
</FrameLayout>